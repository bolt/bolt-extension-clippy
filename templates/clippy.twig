<script type="text/javascript">
    var clippyAgent;

    clippy.load('{{ agent }}', function(agent){
        agent.show();
        {% if messages is empty -%}
            agent.animate();
        {% else -%}
            agent.speak('It appears you have one or more errors...');
            {% for message in messages %}
            agent.speak('{{ message|striptags|escape('js') }}');
            {% endfor %}
        {%- endif -%}
        clippyAgent = agent;
    });

    window.setInterval(
            function() {
                clippyAgent.animate();
            },
            {{ timer }}
    );
</script>
